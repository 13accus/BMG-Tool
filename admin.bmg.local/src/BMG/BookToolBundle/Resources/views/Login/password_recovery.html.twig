		<script>
			jQuery(document).ready(function() {
				Main.init();
				Login.init();
                jQuery("#btn-form-login").prop("disabled",true);

			});

			jQuery(document).ready(function() {
			  $("#password2").keyup(validate);
			});


			function validate() {

			  var password1 = jQuery("#password1").val();
			  var password2 = jQuery("#password2").val();

			    if(password1 == password2) {
			       jQuery("#btn-form-login").text("{% trans from "login" %}btn_reset_password{% endtrans %} ");
			       jQuery("#btn-form-login").attr('class', "btn btn-green pull-right");
                   jQuery("#btn-form-login").prop("disabled",false);
			    }
			    else {
                    jQuery("#btn-form-login").prop("disabled",true);
			        jQuery("#btn-form-login").text("{% trans from "login" %}btn_reset_password_dont_match{% endtrans %} ");
			        jQuery("#btn-form-login").attr('class', "btn btn-bricky pull-right");
			    }

			}


		</script>









