	<body class="login example2">
		<div class="main-login col-sm-4 col-sm-offset-4">
			<div class="logo">BMG<i class="clip-clip"></i>Tool
			</div>
			<!-- start: LOGIN BOX -->
			<div class="box-login">
				<h3>{% trans from "login" %}title_login{% endtrans %}</h3>
				<p>
					{% trans from "login" %}enter_email_password{% endtrans %}
				</p>
				<form class="form-login" action="{{ path('doLogin') }}" method="POST" id="form-login" name="form-login">
					<div class="errorHandler alert alert-danger {% if error is not defined %}no-display{% endif %}">
						<i class="fa fa-remove-sign"></i> {% trans from "login" %}errors{% endtrans %}
					</div>
					<fieldset>
						<div class="form-group">
							<span class="input-icon">
								<input type="text" class="form-control" name="email" id="email" placeholder="{% trans from "login" %}placeholder_email{% endtrans %}" value="{{ username }}">
								<i class="fa fa-user"></i> </span>
						</div>
						<div class="form-group form-actions">
							<span class="input-icon">
								<input type="password" class="form-control password" id="password" name="password" placeholder="{% trans from "login" %}placeholder_password{% endtrans %}">
								<a class="forgot" href="#">
									{% trans from "login" %}forgot_password{% endtrans %}
								</a> </span>
						</div>
						<div class="form-actions">
							<label for="remember" class="checkbox-inline">
								<input type="checkbox" class="grey remember" id="remember" name="remember">
								{% trans from "login" %}keep_me_signed_in{% endtrans %}
							</label>
							<button type="submit" class="btn btn-bricky pull-right" id="btn-form-login" name="btn-form-login">
								{% trans from "login" %}btn_login{% endtrans %} <i class="fa fa-arrow-circle-right"></i>
							</button>
						</div>
						<div class="new-account">
							{% trans from "login" %}no_account_yet{% endtrans %}
							<a href="#" class="register">
								{% trans from "login" %}create_account{% endtrans %}
							</a>
						</div>
					</fieldset>
				</form>
			</div>
			<!-- end: LOGIN BOX -->
			<!-- start: FORGOT BOX -->
			<div class="box-forgot">
				<h3>{% trans from "login" %}title_forgot_password{% endtrans %}</h3>
				<p>
					{% trans from "login" %}forgot_password_instructions{% endtrans %}
				</p>
				<form class="form-forgot" action="{{ path('forgotPassword') }}" method="POST" id="form-forgot" name="form-forgot">
					<div class="errorHandler alert alert-danger no-display">
						<i class="fa fa-remove-sign"></i> {% trans from "login" %}errors{% endtrans %}
					</div>
					<fieldset>
						<div class="form-group">
							<span class="input-icon">
								<input type="email" class="form-control" id="email" name="email" placeholder="{% trans from "login" %}placeholder_email{% endtrans %}">
								</span>
						</div>
						<div class="form-actions">
							<a class="btn btn-light-grey go-back">
								<i class="fa fa-circle-arrow-left"></i> {% trans from "login" %}btn_back{% endtrans %}
							</a>
							<button type="submit" id="btn-forgot-password" name="btn-forgot-password" class="btn btn-bricky pull-right">
								{% trans from "login" %}btn_submit{% endtrans %} <i class="fa fa-arrow-circle-right"></i>
							</button>
						</div>
					</fieldset>
				</form>
			</div>
			<!-- end: FORGOT BOX -->
			<!-- start: REGISTER BOX -->
				{% include 'BMGBookToolBundle:Register:create-account.html.twig' %}
			<!-- end: REGISTER BOX -->
			<!-- start: COPYRIGHT -->
			<div class="copyright">
				{% trans from "common" %}copyright{% endtrans %} 
