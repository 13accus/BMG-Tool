            <tr>
                <th>Bookdescription</th>
                <th>Projectid</th>
                <th>Bookid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('book_show', { 'id': entity.bookId }) }}">{{ entity.bookDescription }}</a></td>
                <td>{{ entity.projectId }}</td>
                <td>{{ entity.bookId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('book_show', { 'id': entity.bookId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('book_edit', { 'id': entity.bookId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('book_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
