{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Event list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Eventdatetime</th>
                <th>Eventip</th>
                <th>Eventdescription</th>
                <th>Eventcontroller</th>
                <th>Eventextra</th>
                <th>Eventid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('event_show', { 'id': entity.eventId }) }}">{{ entity.eventDatetime }}</a></td>
                <td>{{ entity.eventIp }}</td>
                <td>{{ entity.eventDescription }}</td>
                <td>{{ entity.eventController }}</td>
                <td>{{ entity.eventExtra }}</td>
                <td>{{ entity.eventId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('event_show', { 'id': entity.eventId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('event_edit', { 'id': entity.eventId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('event_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
