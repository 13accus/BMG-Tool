{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Status list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Statusname</th>
                <th>Statusid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('status_show', { 'id': entity.statusId }) }}">{{ entity.statusName }}</a></td>
                <td>{{ entity.statusId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('status_show', { 'id': entity.statusId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('status_edit', { 'id': entity.statusId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('status_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
